<div class="row justify-content-beginning pl-5">
  <div class="col-10">
    {{#each articles as |article|}}
      <div class="card mb-3 shadow">
        <div class="card-header d-flex w-100 justify-content-between">
          <a href="https://www.singletracks.com/{{article.tag}}" target="_blank"><h5 class="mb-1">{{article.title}}</h5></a>
          <div class="save-page-buttons d-flex flex-nowrap align-self-start">
            <button type="button" class="btn btn-warning btn-sm open-notes-button" data-artid = "{{article.artId}}">Notes</button>
            <button type="button" class="btn btn-warning btn-sm save-button" data-artid = "{{article.artId}}" data-favorite="false">Remove</button>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text">{{article.text}}</p>
        </div>
      </div>
    {{else}}
      <div class="card mb-3 shadow">
        <div class="card-header d-flex w-100 justify-content-between">
          <h4>Ooops..</h4>
        </div>
        <div class="card-body">
          <p class="card-text">There are no saved articles.  Head back to home and save some.</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>